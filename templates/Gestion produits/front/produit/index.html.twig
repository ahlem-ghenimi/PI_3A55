    <!-- Single Page Header start -->
    <div class="container-fluid page-header-zone py-5">
        <h1 class="text-center text-white display-6">Gestion des produits</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-white">Produits</li>
        </ol>
    </div>
    <!-- Single Page Header End -->

    <!-- Product List Section -->
   
        <div class="container text-center">
         <h1 class="text-center my-4">liste des produits </h1>
         <!-- Search Form Start -->
<div class="container text-center my-4">
    <form method="GET" action="{{ path('app_produit_front_index') }}">
        <input type="text" name="searchQuery" placeholder="Search products..." class="form-control my-3 " />
        
    </form>
    <form action="{{ path('analyze_product') }}" method="post" enctype="multipart/form-data">
    <input type="file" name="product_image" required>
    <button type="submit">Analyze</button>
</form>

{% if isHealthy is defined %}
    <p>The product is {{ isHealthy ? 'healthy' : 'unhealthy' }}.</p>
{% endif %}

</div>
<!-- Search Form End -->
        <div class="container text-center">
            <table class="table table-striped table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Nom_produit</th>
                        <th>Cycle_culture</th>
                        <th>Quantite_produit</th>
                        <th>Quantite_vendue</th>
                        <th>Unite_quant_prod</th>
                        <th>Date_semis_prod</th>
                        <th>Date_recolte_prod</th>
                        <th>Cree_le_prod</th>
                        <th>Mis_a_jour_le_prod</th>
                        <th>Categorie</th>
                        <th>Fournisseur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produit in produits %}
                        <tr>
                            <td>{{ produit.id }}</td>
                            <td>{{ produit.nomProduit }}</td>
                            <td>{{ produit.CytcleCulture }}</td>
                            <td>{{ produit.quantiteProduit }}</td>
                             <td>{{ produit.QuantiteVendue }}</td>
                            <td>{{ produit.uniteQuantProd }}</td>
                            <td>{{ produit.dateSemisProd ? produit.dateSemisProd|date('Y-m-d') : '' }}</td>
                            <td>{{ produit.dateRecolteProd ? produit.dateRecolteProd|date('Y-m-d') : '' }}</td>
                            <td>{{ produit.creeLeProd ? produit.creeLeProd|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ produit.misAJourLeProd ? produit.misAJourLeProd|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ produit.categorie ? produit.categorie.nomCategorie : 'N/A' }}</td>
                             <td>{{ produit.Fournisseur ? produit.Fournisseur.NomFournisseur : 'N/A' }}</td>
                            <td class="d-flex gap-2">
                                <a href="{{ path('app_produit_front_download_pdf', {'id': produit.id}) }}" 
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-file-earmark-pdf"></i> PDF
                                </a>
                                <a href="{{ path('app_produit_front_show', {'id': produit.id})}}" 
                                   class="btn btn-primary btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_produit_front_edit', {'id': produit.id}) }}" 
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form method="post" action="{{ path('app_produit_front_delete', { 'id': produit.id }) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce dépôt ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                                <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                                            </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">Aucun produit trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('app_produit_front_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Créer un nouveau produit
                </a>
            </div>
        </div>
    </div>

    <!-- Footer and other sections remain unchanged -->
{% endblock %}
