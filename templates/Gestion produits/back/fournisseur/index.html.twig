{% extends 'base.html.twig' %}
{% block body %}
     <!-- Single Page Header start -->
        <div class="container-fluid produit py-5">
            <h1 class="text-center text-white display-6">Gestion des fournisseurs</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active text-white">Checkout</li>
            </ol>
        </div>
        <!-- Single Page Header End -->

         <!-- Checkout Page Start -->
    <h1 class="text-center my-4">Liste des fournisseurs</h1>
    
              
   
    <div class="container text-center">
    <div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm border-0">
        <thead   class="thead-light">
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for fournisseur in fournisseurs %}
                <tr>
                    <td>{{ fournisseur.NomFournisseur }}</td>

                    <td>{{ fournisseur.Email }}</td>
                    <td>{{ fournisseur.Telephone}}</td>
                    <td>{{ fournisseur.AdresseFournisseur }}</td>
                    <td class="d-flex gap-2">
                       <a href="{{ path('app_fournisseur_front_edit', {'id': fournisseur.id}) }}" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                       </a>
                      <form method="post" action="{{ path('app_fournisseur_front_delete', { 'id':fournisseur.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce dépôt ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ fournisseur.id) }}">
                                                <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                       </form>
                   
                    </td>
                </tr>
            {% else %}
                 <tr>
                <td colspan="7"  class="text-center">aucun fournisseur trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="mt-3">
        <a href="{{ path('app_fournisseur_front_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Créer un nouvel fournisseur
        </a>
    </div>
    <!-- Checkout Page End -->
{% endblock %}
