{% extends 'base.html.twig' %}

{% block title %}Modifier un fournisseur{% endblock %}

{% block body %}
  {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Modifier fournisseur</h3>
        <div class="header-actions"></div>
    </div>
    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Fournisseurs</li>
        </ol>
    </nav>
     {# Main Form Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">fournisseurs</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                            <!-- Nom du fournisseur -->
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="nom_fournisseur">Nom du fournisseur <sup>*</sup></label>
                            {{ form_widget(form.nom_fournisseur, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_fournisseur) }}
                        </div>

                         <!--email du fournisseur -->
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="email">email du fournisseur <sup>*</sup></label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        
                    <!-- Telephone -->
                    
                     <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                        <label class="form-label my-3" for="telephone">telephone <sup>*</sup></label>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.telephone) }}
                    </div>
               
                
                    <!-- adresse_fournisseur  -->
                         <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                        <label class="form-label my-3" for="adresse_fournisseur">adresse_fournisseur<sup>*</sup></label>
                        {{ form_widget(form.adresse_fournisseur, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.adresse_fournisseur) }}
                    </div>
                </div>
                 </div>
                        {# Submit Button #}
                        <div class="row g-4 pt-4 text-end">
                            <div class="col">
                                <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase text-primary w-auto">Valider</button>
                            </div>
                        </div>

                    </div>

                        {{ form_end(form) }}
                   
                </div>
            </div>
      
   
{% endblock %}

   
<!-- Checkout Page End -->
    

