{% extends 'basefront.html.twig' %}

{% block title %} Ajouter Ressource{% endblock %}

{% block body %}


 <!-- Page Header Start -->
  <div class="page-header-depot py-5">
    <h1 class="text-center text-white display-6">Gestion des Dépôts</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="{{ path('app_depot_list') }}">Depots</a></li> <!-- Lien vers la Liste des Dépôts -->
        <li class="breadcrumb-item"><a href="{{ path('app_ressource_index') }}">Ressources</a></li> <!-- Lien vers la Liste des Ressources -->
       
    </ol>
</div>
    <!-- Page Header End -->

<div class="container-fluid py-5 mt-5"> <!-- Added mt-5 here -->
    <div class="container py-5">
        <div class="text-center w-100">
            <h1 class="mb-4" style="font-size: 2rem;">Ajouter une Ressource</h1>
        </div>
        {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}

        <div class="row g-5">
            <div class="col-md-12 col-lg-12 col-xl-13">
                <div class="form-item">
                    <label class="form-label my-3">Nom de la Ressource<sup>*</sup></label>
                    {{ form_widget(form.nom_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.nom_ressource) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Type de Ressource<sup>*</sup></label>
                    {{ form_widget(form.type_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.type_ressource) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Quantité<sup>*</sup></label>
                    {{ form_widget(form.quantite_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.quantite_ressource) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Unité de Mesure<sup>*</sup></label>
                    {{ form_widget(form.unite_mesure, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.unite_mesure) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Date d'Ajout<sup>*</sup></label>
                    {{ form_widget(form.date_ajout_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.date_ajout_ressource) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Date d'Expiration</label>
                    {{ form_widget(form.date_expiration_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.date_expiration_ressource) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Statut<sup>*</sup></label>
                    {{ form_widget(form.statut_ressource, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.statut_ressource) }}</div>
                </div>

                <div class="form-item">
                    <label class="form-label my-3">Dépôt<sup>*</sup></label>
                    {{ form_widget(form.depot, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.depot) }}</div>
                </div>

                <div class="row g-4 pt-4 text-end">
                    <div class="col">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase text-primary w-auto">Valider</button>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
